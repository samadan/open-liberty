-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Import-Package: ${defaultPackageImport}, com.ibm.ws.transaction.web

src: \
	fat/src,\
	test-bundles/ifxlib/src
		
-sub: *.bnd

fat.project: true

# Do not release this project's bundles to the bnd repository.
# If has a test bundle whose name is shared with another project.
# Because of that you can get a build error that the bundle
# is already published when doing parallel builds in gradle.
-releaserepo:

tested.features:\
  cdi-3.0, cdi-4.0,\
  servlet-5.0, servlet-6.0

-buildpath: \
	com.ibm.tx.jta;version=latest,\
	com.ibm.websphere.javaee.servlet.3.1;version=latest,\
	com.ibm.websphere.javaee.transaction.1.2;version=latest,\
	com.ibm.ws.transaction.fat.util;version=latest,\
	com.ibm.ws.transaction.hadb_fat.derby.1;version=latest,\
	com.ibm.ws.transaction.test.util;version=latest,\
	io.openliberty.org.testcontainers;version=latest
