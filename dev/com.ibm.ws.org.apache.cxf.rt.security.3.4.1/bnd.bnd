-include=~../cnf/resources/bnd/bundle.props

-sub: *.bnd

bVersion=1.0
cxfVersion=3.5.5.1

WS-TraceGroup: WSSECURITY

Bundle-Description: cxf rt security, version 3.4.1
Bundle-ActivationPolicy: lazy

Import-Package:  \
  !com.ctc.wstx.*, \
  !net.sf.ehcache.*, \
  org.apache.cxf.*; version="[3.2.4,4.0.0)", \
  com.ibm.websphere.ras, \
  com.ibm.websphere.ras.annotation, \
  com.ibm.ws.ffdc, \
  *

Export-Package: \
  org.apache.cxf.rt.security.*;version=${cxfVersion}

-includeresource: \
  @\${repo;io.openliberty.org.apache.cxf:cxf-rt-security;${cxfVersion};EXACT}!/!META-INF/maven/*|META-INF/MANIFEST.MF, \
  @\${repo;io.openliberty.org.apache.cxf:cxf-rt-security;${cxfVersion};EXACT}!/META-INF/DEPENDENCIES, \
  @\${repo;io.openliberty.org.apache.cxf:cxf-rt-security;${cxfVersion};EXACT}!/META-INF/LICENSE, \
  @\${repo;io.openliberty.org.apache.cxf:cxf-rt-security;${cxfVersion};EXACT}!/META-INF/NOTICE, \
  @\${repo;io.openliberty.org.apache.cxf:cxf-rt-security;${cxfVersion};EXACT}!/META-INF/cxf/*, \
  org/apache/cxf=${bin}/org/apache/cxf

globalize: false
instrument.ffdc: false

-buildpath: \
  io.openliberty.org.apache.cxf:cxf-rt-security;strategy=exact;version=${cxfVersion}, \
  com.ibm.ws.org.apache.cxf.cxf.core.3.2;version=latest, \
  com.ibm.ws.logging.core
