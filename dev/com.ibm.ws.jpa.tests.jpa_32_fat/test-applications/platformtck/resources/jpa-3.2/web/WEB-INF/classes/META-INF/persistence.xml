<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
        version="3.2">

    <!-- Application Scoped Persistence Unit with LongScoped qualifier -->
    <persistence-unit name="ApplicationScopedPU">
        <qualifier>io.openliberty.jpa.platformtck.tests.web.LongScoped</qualifier>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create" />
            <property name="eclipselink.logging.parameters" value="true"/>
             <property name="jakarta.persistence.bean.classes" value="jakarta.persistence.EntityManager,jakarta.persistence.EntityManagerFactory,jakarta.persistence.criteria.CriteriaBuilder,jakarta.persistence.PersistenceUnitUtil,jakarta.persistence.Cache,jakarta.persistence.metamodel.Metamodel"/>
        </properties>
    </persistence-unit>
    
    <!-- Dependent Scoped Persistence Unit with ShortScoped qualifier -->
    <persistence-unit name="DependentScopedPU">
        <qualifier>io.openliberty.jpa.platformtck.tests.web.ShortScoped</qualifier>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create" />
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="jakarta.persistence.bean.classes" value="jakarta.persistence.EntityManager,jakarta.persistence.EntityManagerFactory,jakarta.persistence.criteria.CriteriaBuilder,jakarta.persistence.PersistenceUnitUtil,jakarta.persistence.Cache,jakarta.persistence.metamodel.Metamodel"/>
        </properties>
    </persistence-unit>
    
    <!-- Default Transaction Scoped Persistence Unit (original) -->
    <persistence-unit name="DefaultScopedPU">
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create" />
            <property name="eclipselink.logging.parameters" value="true"/>
             <property name="jakarta.persistence.bean.classes" value="jakarta.persistence.EntityManager,jakarta.persistence.EntityManagerFactory,jakarta.persistence.criteria.CriteriaBuilder,jakarta.persistence.PersistenceUnitUtil,jakarta.persistence.Cache,jakarta.persistence.metamodel.Metamodel"/>
        </properties>
    </persistence-unit>
</persistence>
