<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.1.0"
                   xmlns:ibm="http://www.ibm.com/xmlns/appservers/osgi/metatype/v1.0.0">

   <!-- NETTY OPTIONS ........................................................ -->

   <OCD id="io.openliberty.netty.internal" ibm:alias="netty" name="internal" description="internal use only">
      
         <AD name="internal" description="internal use only"
            id="scalerMinThreads" required="false" type="Integer" default="1" min="0"/>

         <AD name="internal" description="internal use only"
            id="scalerMaxThreads" required="false" type="Integer" default="4" min="0"/>

         <AD name="internal" description="internal use only"
            id="scalerWindowSize" required="false" type="String" ibm:type="duration" default="1500ms" min="0"/>

         <AD name="internal" description="internal use only"
            id="scalerDownThreshold" required="false" type="Double" default="0.15" min="0.0" max="1.0"/>

         <AD name="internal" description="internal use only"
            id="scalerUpThreshold" required="false" type="Double" default="0.85" min="0.0" max="1.0"/>

         <AD name="internal" description="internal use only"
            id="scalerDownStep" required="false" type="Integer" default="1" min="1"/>

         <AD name="internal" description="internal use only"
            id="scalerUpStep" required="false" type="Integer" default="1" min="1"/>

         <AD name="internal" description="internal use only"
            id="scalerCycles" required="false" type="Integer" default="3" min="1"/>

         <AD name="internal" description="internal use only"
            id="scalerMetricsWindowSize" required="false" type="String" ibm:type="duration" default="0s" min="0"/>
   </OCD>

   <Designate pid="io.openliberty.netty.internal">
      <Object ocdref="io.openliberty.netty.internal" />
   </Designate>

</metatype:MetaData>
