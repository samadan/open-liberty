<server>

  <featureManager>
    <feature>componenttest-2.0</feature>
    <feature>jndi-1.0</feature>
    
    <feature>data-1.0</feature>
    <feature>persistenceContainer-3.2</feature>
    
    <!-- Features required by Hibernate -->
    <feature>xmlBinding-4.0</feature>
    
    <feature>servlet-6.1</feature>
  </featureManager>
  
  <include location="../fatTestPorts.xml"/>

  <data>
    <logValues>test.jakarta.data.jpa.web</logValues>
    <logValues>test.jakarta.data.jpa.web.hibernate</logValues>
  </data>

  <application location="DataJPATestApp.war">
    <classloader commonLibraryRef="JDBCLibrary"/>
  </application>

  <dataSource id="DefaultDataSource" fat.modify="true">
    <jdbcDriver libraryRef="JDBCLibrary"/>
    <properties.derby.embedded createDatabase="create" databaseName="memory:testdb" user="dbuser1" password="dbpwd1"/>
  </dataSource>

  <library id="JDBCLibrary">
    <fileset dir="${shared.resource.dir}/jdbcJava17Plus" includes="${env.DB_DRIVER}"/>
    <fileset dir="${shared.resource.dir}/jpa32_hibernate_orm" includes="*.jar"/>
  </library>

  <javaPermission codeBase="${shared.resource.dir}/jdbcLatest/${env.DB_DRIVER}" className="java.security.AllPermission"/>
</server>
